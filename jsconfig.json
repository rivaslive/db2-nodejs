{
  "compilerOptions": {
    "module": "ESNEXT",
    "target": "ESNEXT",
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "./src/Application/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@middlewares/*": [
        "./src/middlewares/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@routes/*": [
        "./src/Routes/*"
      ],
      "@server/*": [
        "./src/Server/*"
      ],
      "@utils/*": [
        "./src/Utils/*"
      ]
    }
  },
  "include": ["./"],
  "exclude": ["node_modules", "**/node_modules/**"]
}
